<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/fragment_feed">

    <fragment
        android:id="@+id/fragment_feed"
        android:name="com.example.epet.ui.main.view.FeedFragment" />

    <fragment
        android:id="@+id/fragment_documents"
        android:name="com.example.epet.ui.main.view.DocumentsFragment" />

    <fragment
        android:id="@+id/fragment_services"
        android:name="com.example.epet.ui.main.view.ServicesFragment" >

        <action
            android:id="@+id/action_services_to_documents"
            app:destination="@id/fragment_services_documents"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_menu"
        android:name="com.example.epet.ui.main.view.MenuFragment" />

    <fragment
        android:id="@+id/fragment_services_documents"
        android:name="com.example.epet.ui.main.view.ServicesDocumentsFragment" />
</navigation>
