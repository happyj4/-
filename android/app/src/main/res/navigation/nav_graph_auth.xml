<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_auth"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.epet.ui.auth.view.LoginFragment">

        <action
            android:id="@+id/login_to_registration"
            app:destination="@id/fragment_registration" />
    </fragment>


    <fragment
        android:id="@+id/fragment_registration"
        android:name="com.example.epet.ui.auth.view.RegistrationFragment">

        <action
            android:id="@+id/registration_to_login"
            app:destination="@id/fragment_login" />
    </fragment>

</navigation>