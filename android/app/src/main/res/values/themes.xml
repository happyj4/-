<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CustomAuthActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="Theme.CustomMainActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="BottomSheetAnimation" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/enter_bottom_passport_menu</item>
        <item name="android:windowExitAnimation">@anim/exit_bottom_passport_menu</item>
    </style>
</resources>