<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_white"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_left">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Повна інформація"
            android:paddingHorizontal="22dp"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:textColorHint="@color/gray_hint_text"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Інформація про вакцинацію"
            android:paddingHorizontal="22dp"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:textColorHint="@color/gray_hint_text"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Витяг про улюбленця"
            android:paddingHorizontal="22dp"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:textColorHint="@color/gray_hint_text"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Питання та відповіді"
            android:paddingHorizontal="22dp"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:textColorHint="@color/gray_hint_text"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf ="@+id/ll_main"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_left">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@null"
            android:fontFamily="@font/e_ukraine_regular"
            android:text="Закрити"
            android:paddingHorizontal="22dp"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:textColorHint="@color/gray_hint_text"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_close"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />
</androidx.constraintlayout.widget.ConstraintLayout>